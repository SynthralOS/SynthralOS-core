{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./backend/dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./backend",
    "paths": {
      "@/*": ["./backend/src/*"],
      "@sos/shared": ["./shared/src"]
    }
  },
  "include": ["backend/src/**/*", "backend/drizzle/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}

